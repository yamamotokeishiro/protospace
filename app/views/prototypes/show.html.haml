.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@prototype.user) do
            = image_tag(@prototype.user.avatar.thumb, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to "#{@prototype.user.name}", user_path(@prototype.user)
            .degree
              = @prototype.user.position
    .col-md-6.clearfix
      .likes-box
        -# - if @prototype.likes_user(current_user)
        -#   #like-button
        -#   = image_tag("icon_heart_red.svg")
        -#   = likes_counter(@likes)
        -# - else
        -#   #like-button
        -#     = image_tag("icon_heart.svg")
        -#     #like-sum
        -#     = likes_counter(@likes)
        = render 'likes/like_links', prototype: @prototype, likes: @likes, like: @like
  .row
    .col-md-9.image-box
      = image_tag(@prototype.set_main_thumbnail.large, class: 'img-responsive img-size-fix', style: "margin: 0 auto;")
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.captured_images.sub.each do |image|
          %li.list-group-item
            = image_tag(image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num
        = "(#{@comments.length})"
    #comment_area.col-md-8
      #comment_list
        -if @comments
          - @comments.each do |comment|
            .media
              .media-left
                = image_tag(comment.user.avatar)
                = link_to ""
              .media-body
                %h4.media-heading#top-aligned-media= comment.user.name
                %p= comment.text
      = form_for [@prototype,@comment] do |f|
        %h4 Write a comment
        .row
          .form-group.col-md-10
            = f.text_area :text
          .form-group.col-md-2
            = f.submit "COMMENT", class: "comment-submit"
