.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.btn-default.btn-popular
          = link_to "Popular", "/"
        %li.btn-default.btn-popular
          = link_to "Newest", "newest"
      = link_to "VIEW TAGS", "/tags", class: "btn btn-default col-lg-1"

.container.proto-list
  .row
    = render partial: 'prototypes/prototype', collection: @popular, as: :prototype

.text-center
  %ul.pagination
    = paginate(@popular)
